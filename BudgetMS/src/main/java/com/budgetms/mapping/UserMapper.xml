<mapper namespace="com.budgetms.dao.IUserDao">
	<resultMap id="BaseResultMap" type="com.budgetms.pojo.User">
		<id column="userId" property="userId" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="account" property="account" jdbcType="VARCHAR" />
		<result column="pwd" property="pwd" jdbcType="VARCHAR" />
		<result column="dept" property="dept" jdbcType="INTEGER" />
	</resultMap> 
	
	<sql id="Base_Column_List">
		userId, name, account, pwd,dept
	</sql>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer"> 
		select * from user where userId=#{userId}
	</select> 

 	<delete id="deleteUser" parameterType="int"> delete from user where 
		id=#{userId} </delete> 
		
	<insert id="insertUser" parameterType="com.budgetms.pojo.User" > insert 
		into user values(#{name}, #{account},#{pwd},#{dept}) </insert> <update id="updateUser" 
		parameterType="com.budgetms.pojo.User"> update user set name=#{name} where id=#{userId} 
